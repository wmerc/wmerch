---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { GoogleAnalytics } from "astro-analytics";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <GoogleAnalytics id="G-H58VPTB7C0" />
  </head>
  <body>
    <Header />
    <div class="header-container">
      <img src="/home-header.png" alt="header image" class="header-image" />
    </div>
    <main>
      <h4>Hey there!</h4>
      <p>
        I'm Will, a seasoned product designer with over a decade of experience.
        I am passionate about creating intuitive, user-centered designs that
